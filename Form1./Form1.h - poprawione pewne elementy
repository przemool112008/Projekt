	private: System::Void button1_Click(System::Object^  sender, System::EventArgs^  e) {
		if (label1->Text == "0"){
			label1->Text = "1";
		}
		else{
			label1->Text = Convert::ToInt32(label1->Text) + "1";
		}
	}
